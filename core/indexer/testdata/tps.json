{
  "index_patterns": ["tps-*"],
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "index": {
      "sort.field": ["timestamp", "nonce"],
      "sort.order": ["desc", "desc"]
    }
  },
  "mappings": {
    "properties": {
      "nonce": {
        "type": "long"
      },
      "timestamp": {
        "type": "date"
      }
    }
  }
}
