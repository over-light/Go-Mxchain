{
  "index_patterns": ["miniblocks-*"],
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "opendistro.index_state_management.policy_id": "blocks_policy",
    "opendistro.index_state_management.rollover_alias": "miniblocks",
    "index": {
      "sort.field": ["timestamp", "nonce"],
      "sort.order": ["desc", "desc"]
    }
  },
  "mappings": {
    "properties": {
      "nonce": {
        "type": "long"
      },
      "timestamp": {
        "type": "date"
      }
    }
  }
}
