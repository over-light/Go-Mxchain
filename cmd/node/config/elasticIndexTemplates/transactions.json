{
  "index_patterns": ["transactions-*"],
  "template": {
    "settings": {
      "number_of_shards": 5,
      "number_of_replicas": 0,
      "sort": {
        "field": "timestamp",
        "order": "desc"
      }
    },
    "mappings": {
      "properties": {
        "nonce": {
          "type": "long"
        },
        "timestamp": {
          "type": "date"
        }
      }
    }
  }
}
